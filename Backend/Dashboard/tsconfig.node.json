{
  "include": ["playwright.config.ts", "tests/**/*.spec.ts", "*.js", "*.ts"],
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": ["node"]
  }
}
